MOD_ORIGINAL="${ANDROID_ROOT}/vendor/cm/prebuilt/common/bootanimation/1080.zip"
MOD_FILE="${MODS_DIR}/bootanimation/bootanimation.zip"
MOD_REFRESH="${OUT_DIR}/target/product/gemini/system/media/bootanimation.zip"

file_ok "${MOD_ORIGINAL}" && out "Backup [${MOD_ORIGINAL}] to [${MOD_FILE}.bak]" && mv "${MOD_ORIGINAL}" "${MOD_FILE}.bak"
out "Modding [${MOD_ORIGINAL}] with [${MOD_FILE}]" && cp "${MOD_FILE}" "${MOD_ORIGINAL}"
file_ok "${MOD_REFRESH}" && out "Triggering refresh [${MOD_REFRESH}]" && rm "${MOD_REFRESH}"
